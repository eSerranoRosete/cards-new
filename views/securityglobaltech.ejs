<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= user.title %>">
    <title><%= user.company_name %> | <%= user.first_name %> <%= user.last_name %></title>
    <link rel="stylesheet" href="/public/css/output.css">
    <link rel="icon" href="/public/images/icons/securityglobaltech_icon.png">
    <link rel="apple-touch-icon" href="/public/images/icons/securityglobaltech_icon.png">
</head>
<body class="bg-black">
    <div class="max-w-md m-auto bg-white min-h-screen relative overflow-hidden">
        <!-- BANNER -->
        <div id="banner" class="w-full h-72 relative flex justify-center items-end z-10">
            <img src="/public/images/banners/securityglobaltech.jpg" alt="Cover Image" class="absolute object-cover object-center h-full w-full">
            <!-- PROFILE PICTURE -->
            <div class="w-32 h-32 rounded-xl translate-y-1/2 overflow-hidden shadow-xl">
                <img src="https://api.inteminer.com/users/<%= user._id %>/profile" alt="Profile Image" class="w-full h-full object-cover object-center">
            </div>
        </div>
        <!-- MAIN CONTACT -->
        <div class="pt-20 text-center relative">
            <!-- QR CODE ICON -->
            <img id="qrBtn" src="/public/images/buttons/qr-button.svg" alt="QR button icon" class="absolute right-4 top-4 cursor-pointer shadow-xl">
            <div class="w-5/6 m-auto p-3 mb-5 text-slate-800">
                <h4 class="text-lg sm:text-2xl font-bold"><%= user.first_name %> <%= user.last_name %></h4>
                <p class="text-sm max-w-xs m-auto mb-2"><%= user.title %></p>
                <p class="font-bold mb-4 text-sm flex items-center justify-center"><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg><%= user.company_name %></p>
                <a href="https://api.inteminer.com/users/<%= user._id %>/vcf" class="flex items-center bg-black text-sm text-white rounded-xl m-auto px-6 py-2 justify-center">AÃ±adir a contactos <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                  </svg></a>
                <div class="flex justify-around">
                </div>
            </div>
        </div>
        <!-- SOCIAL MEDIA BUTTONS -->
        <div class="flex border-t absolute bottom-0 border-slate-400 items-center justify-center flex-wrap w-full py-4 bg-white">
            <% for( let i = 0; i < user.social.length; i++ ) { %>
                <a href="<%= user.social[i].link %> " target="_blank"><img src="/public/images/buttons/<%= user.social[i].name %>.svg" alt="<%= user.social[i].name %> icon" class="w-12 m-3"></a>
            <% } %>
        </div>
        <!-- QR OVERLAY -->
        <div id="qrOverlay" class="bg-black/95 backdrop-blur-lg text-white z-30 absolute -bottom-full grid grid-rows-3 w-full h-full rounded-t-3xl shadow-3xl drop-shadow-2xl text-center">
            <div class="flex items-end justify-center">
                <div>
                    <p>Compartir Tarjeta Digital</p>
                    <div class="rounded-2xl shadow-xl w-20 h-20 m-auto overflow-hidden mt-10">
                        <img src="https://api.inteminer.com/users/<%= user._id %>/profile" alt="Profile Image" class="w-full h-full rounded-md object-cover object-center">
                    </div>
                    <h5 class="font-bold text-center w-44 mt-2 m-auto"><%= user.first_name %> <%= user.last_name %></h5>
                    <p class="text-sm max-w-xs m-auto"><%= user.title %></p>
                </div>
            </div>
            <div class="m-auto mt-5 w-52 h-52 p-2 border-2 border-white rounded-xl flex items-center justify-center">
                <img src="https://api.inteminer.com/users/<%= user._id %>/qr">
            </div>
            <div class="flex items-end justify-center text-xs py-4">
                <p>Powered by <b>Inteminer</b></p>
            </div>
            <button id="closeBtn" class="text-md text-white absolute right-5 top-5"><svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg></button>
        </div>
    </div>
    <script>
        let shareBtn = document.getElementById("share-button");

        if (shareBtn) {
            shareBtn.addEventListener('click', () => {
                if (navigator.share) {
                    navigator.share({
                    title: window.document.title,
                    url: window.document.location.href,
                    }).then(() => {
                        console.log('Thanks for sharing');
                    })
                }
            })
        }


        let qrOverlay = document.getElementById('qrOverlay');
        document.getElementById('qrBtn').addEventListener('click', () => {

            qrOverlay.classList.remove('animate-[slideout_0.3s_ease-in-out_forwards]');
            qrOverlay.classList.add('animate-[slidein_0.3s_ease-in-out_forwards]');
        });

        document.getElementById('closeBtn').addEventListener('click', () => {
            qrOverlay.classList.remove('animate-[slidein_0.3s_ease-in-out_forwards]');
            qrOverlay.classList.add('animate-[slideout_0.3s_ease-in-out_forwards]');
        })
    </script>
</body>
</html>