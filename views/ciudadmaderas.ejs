
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= user.title %>">
    <title><%= user.company_name %> | <%= user.first_name %> <%= user.last_name %></title>
    <link rel="stylesheet" href="/public/css/output.css">
    <link rel="icon" href="/public/images/icons/ciudadmaderas_icon.png">
    <link rel="apple-touch-icon" href="/public/images/icons/ciudadmaderas_icon.png">
</head>
<body>
    <div class="max-w-md m-auto bg-white h-auto relative overflow-hidden">
        <!-- BANNER -->
        <div id="banner" class="w-full h-60 sm:h-72 relative flex justify-center rounded-b-3xl items-end z-10 shadow-xl">
            <img src="/public/images/banners/ciudadmaderas.jpg" alt="Cover Image" class="absolute object-cover object-center rounded-b-3xl h-full w-full">
            <!-- PROFILE PICTURE -->
            <div class="w-32 h-32 rounded-xl translate-y-1/2 overflow-hidden border-8 shadow-xl border-white">
                <img src="https://api.inteminer.com/users/<%= user._id %>/profile" alt="Profile Image" class="w-full h-full object-cover object-center">
            </div>
        </div>
        <!-- MAIN CONTACT -->
        <div class="pt-20 text-center relative">
            <!-- QR CODE ICON -->
            <img id="qrBtn" src="/public/images/buttons/qr-button.svg" alt="QR button icon" class="absolute right-4 top-4 cursor-pointer shadow-xl">
            <div class="border-2 border-yellow-600 bg-white shadow-xl w-5/6 m-auto p-3 rounded-xl mb-5">
                <h4 class="text-lg sm:text-2xl font-bold mb-2"><%= user.first_name %> <%= user.last_name %></h4>
                <p class="text-sm text-slate-700 mb-1"><%= user.title %></p>
                <p class="font-semibold mb-4 text-sm"><%= user.company_name %></p>
                <div class="flex justify-around">
                    <!-- WHATSTAPP -->
                    <a href="https://wa.me/52<%= user.phone %>" target="_blank" class="text-xs text-slate-700"><img class="w-12 m-auto mb-2" src="/public/images/buttons/whatsapp.svg" alt="Whatsapp Icon">Whatsapp</a>
                    <!-- SHARE -->
                    <a id="share-button" class="text-xs text-slate-700 cursor-pointer"><img class="w-12 m-auto mb-2" src="/public/images/buttons/share.svg" alt="Share Icon">Compartir</a>
                    <!-- VCF -->
                    <a href="https://api.inteminer.com/users/<%= user._id %>/vcf" class="text-xs text-slate-700"><img class="w-12 m-auto mb-2" src="/public/images/buttons/contact.svg" alt="Contact Icon">Contacto</a>
                </div>
            </div>
        </div>

        <!-- CONTENT -->
        <p class="text-center text-sm sm:text-base text-slate-800 mb-5">Inversión de <b>Bajo Riesgo</b> y <br> <b>Alta Rentabilidad</b></p>
        <div class="text-gray-700 text-xs mb-4 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12" />
            </svg>
            <p>Desliza y da click para más información</p>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
        </div>
        <!-- SLIDER -->
        <div class="flex snap-x snap-mandatory px-20 pr-5 overflow-x-auto scrollbar-hidden mb-5">
            <a href="https://www.go-digital.mx/cmb" target="_blank" class="h-56 overflow-hidden w-72 shrink-0 mr-5 rounded-xl snap-center shadow-xl">
                <img src="/public/images/ciudadmaderas/queretaro.jpeg" alt="Ciudad Maderas Querétaro" class="object-cover object-center w-full h-full">
            </a>
            <a href="https://www.go-digital.mx/caribe" target="_blank" class="h-56 overflow-hidden w-72 shrink-0 mr-5 rounded-xl snap-center shadow-xl">
                <img src="/public/images/ciudadmaderas/caribe.jpeg" alt="Ciudad Maderas Caribe" class="object-cover object-center w-full h-full">
            </a>
            <a href="https://www.go-digital.mx/leon" target="_blank" class="h-56 overflow-hidden w-72 shrink-0 mr-5 rounded-xl snap-center shadow-xl">
                <img src="/public/images/ciudadmaderas/leon.jpeg" alt="Ciudad Maderas León" class="object-cover object-center w-full h-full">
            </a>
            <a href="https://www.go-digital.mx/sma" target="_blank" class="h-56 overflow-hidden w-72 shrink-0 mr-5 rounded-xl snap-center shadow-xl">
                <img src="/public/images/ciudadmaderas/san-miguel.jpeg" alt="Ciudad Maderas San Miguel" class="object-cover object-center w-full h-full">
            </a>
            <a href="https://www.go-digital.mx/cmpp" target="_blank" class="h-56 overflow-hidden w-72 shrink-0 mr-5 rounded-xl snap-center shadow-xl">
                <img src="/public/images/ciudadmaderas/merida.jpeg" alt="Ciudad Maderas Mérida" class="object-cover object-center w-full h-full">
            </a>
            <a href="https://www.go-digital.mx/slp" target="_blank" class="h-56 overflow-hidden w-72 shrink-0 rounded-xl snap-center shadow-xl">
                <img src="/public/images/ciudadmaderas/san-luis.jpeg" alt="Ciudad Maderas San Luís" class="object-cover object-center w-full h-full">
            </a>
        </div>

        <!-- CALL TO ACTION -->
        <% if (user.customerQuoter == true && user.showQuoter == true) { %>
            <div class="text-center mt-10">
                <a href="https://cotizador.inteminer.com/cliente/<%= user._id %> " target="_blank" class="bg-blue-700 text-white px-6 tracking-wide py-2 rounded-full">Cotiza tu terreno aquí</a>
            </div>
            <hr class="my-5">
        <% } %>
        
        <% if (user.role == 'gerente' || user.role == 'coordinador' && user.showRecruit == true) { %>
            <div class="mb-10 text-center">
                <p class="mb-2">¿Quieres formar parte del equipo?</p>
                <a href="/<%= user._id %>/join" class="bg-blue-500 text-white px-6 tracking-wide py-2 rounded-full">Postulate aquí</a>
            </div>
        <% } %>
        <!-- SOCIAL MEDIA BUTTONS -->
        <div class="flex border-t border-slate-400 items-center justify-center flex-wrap w-full py-4">
            <% for( let i = 0; i < user.social.length; i++ ) { %>
                <a href="<%= user.social[i].link %> " target="_blank"><img src="/public/images/buttons/<%= user.social[i].name %>.svg" alt="<%= user.social[i].name %> icon" class="w-12 m-2"></a>
            <% } %>
        </div>
        <!-- QR OVERLAY -->
        <div id="qrOverlay" class="bg-white z-30 absolute -bottom-full w-full h-[90%] sm:h-[85%] rounded-t-3xl shadow-3xl drop-shadow-2xl text-center">
            <div class="rounded-2xl shadow-xl w-20 h-20 m-auto overflow-hidden mt-10">
              <img src="https://api.inteminer.com/users/<%= user._id %>/profile" alt="Profile Image" class="w-full h-full object-cover object-center">
            </div>
            <h5 class="font-bold text-center w-44 mt-2 m-auto"><%= user.first_name %> <%= user.last_name %></h5>
            <div class="m-auto mt-5 w-52 h-52 p-2 border-2 border-blue-500 rounded-xl flex items-center justify-center">
              <img src="https://api.inteminer.com/users/<%= user._id %>/qr">
            </div>
            <h5 class="text-center mt-2 text-sm mb-4">Comparte esta tarjeta</h5>
            <button id="closeBtn" class="bg-blue-500 px-4 py-1 text-sm rounded-md text-white">Cerrar</button>
        </div>
    </div>
    <script>
        let shareBtn = document.getElementById("share-button");

        shareBtn.addEventListener('click', () => {
            if (navigator.share) {
                navigator.share({
                title: window.document.title,
                url: window.document.location.href,
                }).then(() => {
                    console.log('Thanks for sharing');
                })
            }
        })

        let qrOverlay = document.getElementById('qrOverlay');
        document.getElementById('qrBtn').addEventListener('click', () => {

            qrOverlay.classList.remove('animate-[slideout_0.3s_ease-in-out_forwards]');
            qrOverlay.classList.add('animate-[slidein_0.3s_ease-in-out_forwards]');
        });

        document.getElementById('closeBtn').addEventListener('click', () => {
            qrOverlay.classList.remove('animate-[slidein_0.3s_ease-in-out_forwards]');
            qrOverlay.classList.add('animate-[slideout_0.3s_ease-in-out_forwards]');
        })

        document.getElementById('banner').addEventListener('click', () => {
            qrOverlay.classList.remove('animate-[slidein_0.3s_ease-in-out_forwards]');
            qrOverlay.classList.add('animate-[slideout_0.3s_ease-in-out_forwards]');
        })
    </script>
</body>
</html>